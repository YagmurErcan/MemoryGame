<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">
            
            <ImageView
                android:id="@+id/imageView_1_1"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_1_2"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_1_3"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_1_4"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView_2_1"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_2_2"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_2_3"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_2_4"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView_3_1"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_3_2"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_3_3"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_3_4"
                android:scaleType="centerInside"
                android:src="@drawable/image_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
